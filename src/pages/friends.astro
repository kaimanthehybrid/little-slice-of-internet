---
import "../styles/friends.css";

import { getCollection } from "astro:content";
import { openGraph } from "spectre:globals";
import Card from "../components/Card.astro";
import Icon from "../components/Icon.astro";
import ImageGlow from "../components/ImageGlow.astro";
import AuredPicture from "../assets/aured.png";
import AsherPicture from "../assets/asher.png";
import MoondogPicture from "../assets/moondog.png";
import SchwankPicture from "../assets/schwank.png";
import BlueberryPicture from "../assets/blueberry.webp";
import AlastairPicture from "../assets/alastair.png";
import FriendLayout from "../layouts/FriendLayout.astro";
---

<!-- TO-DO: Create a system to dynamically create a card and add it to a list
(probably to be done in either TypeScript or Astro) -->
<FriendLayout title={"Friends"} pagefindIgnore>
    <div class="layout-grid-list" slot="left">
        <Card class="flex-col-card">
            <ImageGlow
                quality={100}
                width={120}
                height={120}
                src={AuredPicture}
                alt="A smiling blue panda staring at the camera!"
                loading="eager"
            />
            <a href="https://pandaau.red/">
                <h2>Aured</h2>
            </a>

            <ul class="overview-list">
                <li>
                    <span class="center-item"
                        >A wonderful blue panda who has a penchant for transit,
                        mathematics, and computer science. They use Neovim, btw.</span
                    >
                </li>
            </ul>
        </Card>
        <Card class="flex-col-card">
            <ImageGlow
                quality={100}
                width={120}
                height={120}
                src={AsherPicture}
                alt="Placeholder"
                loading="eager"
            />
            <a href="https://asher.dog/">
                <h2>Asher</h2>
            </a>
            <ul class="overview-list">
                <li>
                    <span
                        >A modern day renaissance man who does everything from
                        software to hardware to photography! Extremely tall, can
                        confirm.</span
                    >
                </li>
            </ul>
        </Card>
        <Card class="flex-col-card">
            <ImageGlow
                quality={100}
                width={120}
                height={120}
                src={MoondogPicture}
                alt="Moondog."
                loading="eager"
            />
            <a href="https://dog-game.xyz/">
                <h2>Mica</h2>
            </a>
            <ul class="overview-list">
                <li>
                    <span
                        >A longtime friend who's talent, tenacity, and whimsy
                        precedes them. Their games, music, and mind is
                        world-class. Hi, they're Moondog!</span
                    >
                </li>
            </ul>
        </Card>
        <Card class="flex-col-card">
            <ImageGlow
                quality={100}
                width={120}
                height={120}
                src={SchwankPicture}
                alt="A furred dragon fish that is looking cutely at you."
                loading="eager"
            />
            <a href="https://schwankmoment.neocities.org/">
                <h2>Schwank</h2>
            </a>
            <ul class="overview-list">
                <li>
                    <span
                        >A musical anomaly who lives, thrives, and creates
                        beauty out of chaos, and the best rhythm game player I
                        know. Also has a cute as fuck sona!</span
                    >
                </li>
            </ul>
        </Card>
        <Card class="flex-col-card">
            <ImageGlow
                quality={100}
                width={120}
                height={120}
                src={BlueberryPicture}
                alt="Placeholder"
                loading="eager"
            />
            <a href="https://blueberry.coffee/">
                <h2>Blueberry</h2>
            </a>
            <ul class="overview-list">
                <li>
                    <span
                        >Another long time friend who is a Swiss army knife of
                        talent. He has limitless potential, and there is not a
                        single thing they cannot do.</span
                    >
                </li>
            </ul>
        </Card>
        <Card class="flex-col-card">
            <ImageGlow
                quality={100}
                width={120}
                height={120}
                src={AlastairPicture}
                alt="An alpaca fursona in a musical art re-rendition of Starry Night."
                loading="eager"
            />
            <a href="https://tr.ee/aY95Tu">
                <h2>Alastair</h2>
            </a>
            <ul class="overview-list">
                <li>
                    <span
                        >One of the sweetest people ever, composes music like a
                        true maestro, and has an extremely soft spot for
                        alpacas.</span
                    >
                </li>
            </ul>
        </Card>
    </div>
</FriendLayout>
